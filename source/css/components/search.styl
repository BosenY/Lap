.local-search {
  position: relative;
  text-align: left;
  margin-bottom: 10px;
}

.local-search-input-cls {
  width: 200px;
  margin: 10px 0;
  padding: 8px 12px;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;
}
#local-search-input{
  margin: 0;
  padding: 0;
  border: 0;
  background: 0 0;
  font-size: inherit;
  font-family: Lato,"Helvetica Neue",Helvetica,Arial,sans-serif; 
  color: #000;
  outline: 0;
  -webkit-appearance: none;
  margin-left: 10px;
  }
#local-search-close {
  content: 'x';
  position: absolute;
  right: 10px;
  top: -15px;
  background: #fff;
  color: #888;
  border-radius: 100%;
  // line-height: 25px;
  text-align: center;
  font-size: 16px;
  font-family: consolas;
  border: 1px solid #CCC;
  display: block;
  width: 25px;
  height: 25px;
  cursor: pointer;
  font-style: normal;
  font-weight: normal;
  transform: rotateZ(0);
  transition: all 0.3s;
  &:hover {
    border-color: #666;
    color: #222;
    transform: rotateZ(180deg);
    transition: all 0.3s;
  }
}
.site-search-form{
  // display: none;
  padding-left: 6px;
  padding-bottom: 8px;
  border-bottom: 1px solid #999;
}
.local-search-result-cls {
  position: absolute;
  z-index: 99;
  width: 400px;
  top: 50px;
  right: 0;
  .local-search-empty {
    color: #888;
    line-height: 44px;
    text-align: center;
    display: block;
    font-size: 16px;
    font-weight: normal;
  }
  
  ul {
    border-radius: 6px;
    width: 360px;
    max-height: 450px;
    min-height: 0;
    height: auto;
    overflow-y: auto;
    border: 1px solid #CCC;
    padding: 10px 20px;
    background: #FFF;
    box-shadow: 1px 2px 4px #CCC;
    li {
      text-align: left;
      border-bottom: 1px solid #CCC;
      padding-bottom: 20px;
      margin-bottom: 20px;
      line-height: 30px;
      font-weight: normal;
      &:last-child {
        border-bottom: none;
        margin-bottom: 0;
      }
      a {
        margin-top: 20px;
        font-size: 16px;
      }
      p {
        margin-top: 10px;
        font-size: 14px;
        max-height: 124px;
        overflow: hidden;
      }
      em.search-keyword {
        color: #e58c7c;
      }
    }
  }
  .search-result-list::-webkit-scrollbar {
      width: 10px;
  }
  .search-result-list::-webkit-scrollbar-track {
      border-radius: 5px;
      background-color: #eee;
  }
        
  .search-result-list::-webkit-scrollbar-thumb {
      border-radius: 5px;
      background: #3DB6A4;
      background-image: -webkit-linear-gradient(45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent);
  }
}

.local-search-plugin {
  .local-search-input-cls {
    opacity: 0.6;
    width: 160px;
    transition: all 0.3s;
    &:hover {
      opacity: 1;
      width: 200px;
      transition: all 0.3s;
    }
  }
  .icon {
    position: relative;
    left: -30px;
    color: #999;
    cursor: pointer;
  }
}
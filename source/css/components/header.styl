$siteAColor = #000
$siteABgColor = #F03838
$siteDescColor = #9e9e9e
$siteHoverColor = #5e5e5e

header
  line-height 1.8rem
  margin-bottom: 20px
  background: no-repeat center center
  background-color: #ccc
  background-attachment: scroll
  background-size: cover
  margin-bottom: 20px
  padding: 20px
  .header-container
    display: flex
    justify-content: space-between
  .site-branding
    text-align center
    margin-bottom 2rem
    font-family "Open Sans", arial, sans-serif
    letter-spacing 0.1em
    text-transform uppercase

    .site-title
      margin 0
      font-size 1.4rem

      a
        display inline-block
        color $siteAColor
        font-weight bolder
        line-height 3rem
        height 3rem
        padding 0 1rem
        -webkit-transition padding 0.3s ease-out
        transition padding 0.3s ease-out

        &:hover
          color: $siteHoverColor

    .site-description
      color $siteDescColor
      font-size 1.3rem
      margin 1rem 0 0

  .site-navigation
    text-align center

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin 0 0.5rem

        a
          display block
          color $siteAColor
          font-size 1.6rem
          line-height 2rem
          padding 0 1rem
          &:hover
            color: $siteHoverColor

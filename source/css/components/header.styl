$siteAColor = #fff
$siteABgColor = #F03838
$siteDescColor = #9e9e9e
$siteHoverColor = #5e5e5e

header
  line-height 1.8rem
  height: 420px
  margin-bottom: 20px
  background: no-repeat center center
  background-color: #ccc
  background-attachment: scroll
  background-size: cover
  margin-bottom: 20px
  padding: 20px
  .navbar-default .navbar-toggle:focus, .navbar-default .navbar-toggle:hover
    background: 0 0 !important
  .navbar-custom
    background: 0 0
    border: none
    position: absolute
    top: 0
    left: 0
    width: 100%;
    z-index: 3;
    font-family: -apple-system,BlinkMacSystemFont,"Helvetica Neue",Arial,"PingFang SC","Hiragino Sans GB",STHeiti,"Microsoft YaHei","Microsoft JhengHei","Source Han Sans SC","Noto Sans CJK SC","Source Han Sans CN","Noto Sans SC","Source Han Sans TC","Noto Sans CJK TC","WenQuanYi Micro Hei",SimSun,sans-serif
    line-height: 1.7
  .navbar-brand
    color: #fff !important
    padding: 20px
    text-transform: uppercase
    font-weight: 800
    letter-spacing: 1px
    &:hover
      opacity: .8
  .nav li a
    color: #fff
    text-transform: uppercase
    font-size: 12px
    line-height: 20px
    font-weight: 800
    letter-spacing: 1px
    &:hover
      opacity: .8
  .navbar-collapse
    border-width: 0px !important
    box-shadow: inset 0 0px 0 rgba(255,255,255,.1) !important
  .header-container
    display: flex
    justify-content: space-between
  .site-branding
    text-align center
    font-family "Open Sans", arial, sans-serif
    letter-spacing 0.1em
    text-transform uppercase
    .site-title
      margin 0
      font-size 1.4rem

      a
        display inline-block
        color $siteAColor
        font-weight bolder
        line-height 3rem
        height 3rem
        padding 0 1rem
        -webkit-transition padding 0.3s ease-out
        transition padding 0.3s ease-out

        &:hover
          opacity: .8
          // color: $siteHoverColor

    .site-description
      color $siteDescColor
      font-size 1.3rem
      margin 1rem 0 0

  .site-navigation
    text-align right

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin 0 0.5rem

        a
          display block
          color $siteAColor
          font-size 1.6rem
          line-height 2rem
          padding 0 1rem
          &:hover
            opacity: .8
            // color: $siteHoverColor

.entry
  .gist
    background #eee
    border 1px solid white
    margin 15px 0px
    padding 7px 15px
    border-radius 2px
    text-shadow 0 0 1px #fff
    line-height 1.6
    overflow auto
    color #666
    .gist-file
      border none
      font-family inherit
      margin 0
      font-size 0.9em
      .gist-data
        background none
        border-bottom none
        pre
          padding 0 !important
          font-family font-mono
      .gist-meta
        background none
        color color-meta
        margin-top 5px
        padding 0
        text-shadow 0 0 1px #fff
        font-size 100%
        a
          color color-link
          &:visited
            color color-link

figure.highlight
  // background #eee
  border 1px solid color-border
  // margin 1em 0
  // padding 1em
  border-radius 2px
  // text-shadow 0 0 1px #fff
  // line-height 1.6
  // overflow auto
  // position relative
  // font-size 0.9em
  display: block
  overflow-x: auto
  padding: 0.5em
  color: #abb2bf
  background: #282c34
  figcaption
    color color-meta
    margin-bottom 5px
    text-shadow 0 0 1px #fff
    a
      position absolute
      right 15px

  pre
    border 0
    padding 0
    margin 0
    background-color: #282c34
    color: #93a1a1
    font-family: Menlo,Monaco,Consolas,"Courier New",monospace
  table
    margin-top 0
    border-spacing 0

  .gutter
    // display: none;
    color color-meta
    width 20px
    padding-right 15px
    border-right 1px solid color-border
    text-align right
  .code
    // padding-left 15px
    // border-left 1px solid #fff
    color #666

  .line
    height: 20px

